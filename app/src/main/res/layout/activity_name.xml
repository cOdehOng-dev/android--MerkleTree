<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_page_gradient"
    tools:context="com.example.c0de_h0ng.merkle.Name">

    <TextView
        android:id="@+id/home_sib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:text="사원번호 등록"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_sib"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:backgroundTint="#1e7888"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="등록할 사원 수"
        android:inputType="number|numberDecimal"
        android:textColor="#fff"
        android:textColorHint="#88ffffff"
        android:textCursorDrawable="@drawable/blinking_cursor_colour" />

    <Button
        android:id="@+id/memberRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/member"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:background="@drawable/login_page_buttons"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="등록"
        android:textSize="17sp" />

</RelativeLayout>